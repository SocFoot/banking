<div  class="col-xs-4 card card-block">
	<h2 class="card-title">Forgot your password?</h2>
	
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
	
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, class:"form-control",  placeholder:"Enter email", autofocus: true %>
	  </div>
	
	  <div class="actions pull-xs-right">
	    <%= f.submit "Send me reset password instructions", class:"btn btn-secondary pull-xs-right" %>
	  </div>
	<% end %>
	
	<%= render "devise/shared/links" %>
</div>
